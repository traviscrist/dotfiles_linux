set $resizeBy 4

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $resizeBy px or $resizeBy ppt
        bindsym Down resize grow height $resizeBy px or $resizeBy ppt
        bindsym Up resize shrink height $resizeBy px or $resizeBy ppt
        bindsym Right resize grow width $resizeBy px or $resizeBy ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $mode_monitor Monitors (a) Auto (w) Work, (m) Mirror, (e) Extend, (i) move Internal, (h) move Hdmi, (d) move Displayport
mode "$mode_monitor" {
    bindsym a mode "default", exec xrandr --auto, exec ~/bin/i3-set-config.sh roadwarrior

    bindsym w mode "default", exec --no-startup-id ~/bin/i3-set-config.sh office, workspace $ws1, move workspace to output eDP1, workspace $ws2, move workspace to output DP1, workspace $ws3, move workspace to output DP1, workspace $ws4, move workspace to output DP1, workspace $ws5, move workspace to output DP1, workspace $ws6, move workspace to output DP1, workspace $ws7, move workspace to output DP1, workspace $ws8, move workspace to output DP1, workspace $ws9, move workspace to output DP1, workspace $ws10, move workspace to output DP1, workspace $ws1

    bindsym m mode "default", exec --no-startup-id ~/bin/i3-set-config.sh roadwarrior, workspace $ws1, move workspace to output eDP1, workspace $ws2, move workspace to output eDP1, workspace $ws3, move workspace to output eDP1, workspace $ws4, move workspace to output eDP1, workspace $ws5, move workspace to output eDP1, workspace $ws6, move workspace to output eDP1, workspace $ws7, move workspace to output eDP1, workspace $ws8, move workspace to output eDP1, workspace $ws9, move workspace to output eDP1, workspace $ws10, move workspace to output eDP1, workspace $ws1

    bindsym e mode "default", exec --no-startup-id ~/bin/i3-set-config.sh extend

    bindsym i move workspace to output eDP1, mode "default"
    bindsym h move workspace to output HDMI1, mode "default"
    bindsym d move workspace to output DP1, mode "default"

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+m mode "$mode_monitor"

