{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "graphql",
    "html",
    "javascript",
    "javascript.jsx",
    "json",
    "less",
    "Markdown",
    "scss",
    "yaml"
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "snippets.extends": {
    "javascriptreact": ["javascript"]
  },
  "javascript.suggestionActions.enabled": false
}
